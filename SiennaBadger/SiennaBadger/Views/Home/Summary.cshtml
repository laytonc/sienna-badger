@model SiennaBadger.Data.Models.PageSummary

@{
    ViewData["Title"] = "Page Summary";
}
<style>
    .carousel-indicators li {
        background-color: #999;
        background-color: rgba(70,70,70,.25);
    }

    .carousel-indicators .active {
        background-color: #444;
    }
</style>


<h2 class="sub-header">Top Words</h2>
<ol>
    @foreach (var word in Model.Words)
    {
        <li>@word.Text (@word.Count)</li>
    }
</ol>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        @for (int count = 0; count < Model.Images.Count(); count++)
        {
            <li data-target="#myCarousel" data-slide-to="@count"></li>
        }

    </ol>
    <div class="carousel-inner" role="listbox" style=" width:100%; height: 200px">

        @for (int count = 0; count < Model.Images.Count(); count++)
        {
            <div class="item @( count == 0 ? "active" : "" )">
                <img src="@Model.Images.ElementAt(count).Url" alt="" style="max-height: 200px; border: 5px solid red;" />
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>